rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(data) {
      return isSignedIn() && data.ownerUid == request.auth.uid;
    }

    function isAssetOwner(assetId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/assets/$(assetId)).data.ownerUid == request.auth.uid;
    }

    match /assets/{assetId} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
    }

    match /assets/{assetId}/intercepts/{interceptId} {
      allow read, update, delete: if isAssetOwner(assetId);
      allow create: if isAssetOwner(assetId);
    }

    match /ingestion_logs/{logId} {
      allow read: if isOwner(resource.data);
    }
  }
}
